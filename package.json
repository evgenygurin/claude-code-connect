{
  "name": "claude-code-linear-native",
  "version": "1.0.0",
  "description": "Native Claude Code + Linear integration without customer ID dependency",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:dev": "tsx src/index.ts",
    "init": "tsx src/index.ts init",
    "test:connection": "tsx src/index.ts test",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:analyze": "tsx src/testing/cli.ts analyze",
    "test:generate": "tsx src/testing/cli.ts generate",
    "test:generate-all": "tsx src/testing/cli.ts generate-all",
    "test:recommendations": "tsx src/testing/cli.ts recommendations",
    "test:demo": "tsx src/testing/example.ts",
    "test:integration": "tsx src/testing/run-integration-tests.ts",
    "test:integration:bug-fix": "tsx src/testing/run-integration-tests.ts --scenario=bug-fix",
    "test:integration:multi-agent": "tsx src/testing/run-integration-tests.ts --scenario=multi-agent",
    "test:integration:stress": "tsx src/testing/run-integration-tests.ts --stress-test --events=200",
    "test:workflow": "vitest run src/testing/workflow.test.ts",
    "test:agents": "vitest run src/testing/agent-scenarios.test.ts",
    "security:test": "tsx src/security/run-security-tests.ts",
    "security:test:verbose": "tsx src/security/run-security-tests.ts --verbose",
    "security:test:report": "tsx src/security/run-security-tests.ts --output-file security-report.json",
    "security:monitor": "tsx src/security/monitoring.ts",
    "linear:create-issues": "tsx scripts/create-linear-issues.ts",
    "linear:check-issues": "tsx scripts/check-linear-issues.ts",
    "test:filter": "tsx scripts/test-filter.ts",
    "code:duplicates": "tsx scripts/find-duplicates.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.128",
    "@fastify/static": "^7.0.4",
    "@linear/sdk": "^26.0.0",
    "@octokit/rest": "^20.1.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tacticlaunch/mcp-linear": "^1.0.12",
    "@types/uuid": "^10.0.0",
    "dotenv": "^16.6.1",
    "fastify": "^4.29.1",
    "glob": "^10.4.5",
    "mem0ai": "^2.1.38",
    "nanoid": "^5.1.6",
    "rate-limiter-flexible": "^7.4.0",
    "tsx": "^4.20.6",
    "uuid": "^11.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^20.19.24",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^4.0.6",
    "eslint": "^9.0.0",
    "prettier": "^3.1.0",
    "ts-morph": "^26.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
